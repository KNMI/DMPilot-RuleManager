            {
                "functionName": "assertQualityCondition",
                "options": {
                    "qualities": ["D"]
                }
            },
            {
                "functionName": "assertPrunedFileExistsCondition",
                "options": {}
            },
            {
                "functionName": "assertModificationTimeOlderThan",
                "options": {
                    "days": 7
                }
            },
            {
                "functionName": "assertModificationTimeOlderThan",
                "options": {
                    "apply_to": "next",
                    "days": 6
                }
            }
        ]
    },
